// =============================================
//  Subash — Prisma Schema
//  Database: PostgreSQL
//  Run: npx prisma generate && npx prisma db push
// =============================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================
//  Enums
// =============================================

enum Role {
  SUPER_ADMIN
  MODERATOR
  SELLER
  DECANTER
  STANDARD
  BRAND_PARTNER
}

enum AuthProvider {
  GOOGLE
  FACEBOOK
  CREDENTIALS
}

enum Season {
  SPRING
  SUMMER
  AUTUMN
  WINTER
  ALL_SEASON
}

enum TimeOfDay {
  DAY
  NIGHT
  BOTH
}

enum ReviewStatus {
  APPROVED
  PENDING
  SPAM
}

// =============================================
//  User
// =============================================

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  phone         String?      @unique
  phoneVerified Boolean      @default(false)
  image         String?  // renamed from avatarUrl — required by @auth/prisma-adapter
  bio           String?
  password      String?  // nullable — OAuth users have no password; bcryptjs hash for manual auth
  role            Role         @default(STANDARD)
  review_count    Int          @default(0)
  reputationScore Int          @default(0)   // Reputation Engine: +2 per review, +1 per HAVE item
  authProvider    AuthProvider @default(CREDENTIALS)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  accounts        Account[]
  sessions        Session[]
  reviews         Review[]
  deals           Deal[]
  dupeVotes       DupeVote[]
  wardrobeItems   WardrobeItem[]
  fragramPosts    FragramPost[]
  fragramLikes    FragramLike[]
  reviewUpvotes   ReviewUpvote[]
  decantListings  DecantListing[] @relation("UserDecants")
  notifications   Notification[]
  brandClaims     BrandClaim[]

  @@index([reputationScore])  // smart review sort: high-rep authors first
  @@index([review_count])     // fast leaderboard sorts
  @@map("users")
}

// =============================================
//  NextAuth.js Required Tables
// =============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =============================================
//  Perfume
// =============================================

model Perfume {
  id           String   @id @default(cuid())
  name         String
  brand        String
  image_url    String?
  top_notes    String[]
  heart_notes  String[]
  base_notes   String[]
  release_year Int?
  perfumer     String?
  description  String?  @db.Text
  gender       String?
  accords      String[]
  slug         String   @unique
  scraped      Boolean  @default(false)
  searchCount  Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  reviews        Review[]
  deals          Deal[]
  dupeOriginal   DupeVote[]      @relation("OriginalPerfume")
  dupeClone      DupeVote[]      @relation("ClonePerfume")
  wardrobeItems  WardrobeItem[]
  fragramPosts   FragramPost[]
  potdEntries    PerfumeOfTheDay[]
  decantListings DecantListing[]
  creator        Creator?        @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  creatorId      String?

  @@index([name, brand])
  @@index([name])
  @@index([brand])           // groupBy brand in sidebar trending-brands query
  @@index([release_year])    // fallback climate-picks orderBy
  @@index([creatorId])       // creator portfolio lookups
  @@map("perfumes")
}

// =============================================
//  Review
// =============================================

model Review {
  id              String     @id @default(cuid())
  userId          String
  perfumeId       String
  text            String       @db.Text
  overall_rating  Float        // 1.0 – 10.0
  longevity_score Int          // 1 – 10
  sillage_score   Int          // 1 – 10
  status          ReviewStatus @default(APPROVED)
  time_tags       TimeOfDay[]
  weather_tags    String[]     // "HOT" | "MILD" | "COLD" | "HUMID" | "DRY" | "RAINY"
  upvote_count    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  user    User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  perfume Perfume          @relation(fields: [perfumeId], references: [id], onDelete: Cascade)
  upvotes ReviewUpvote[]

  @@unique([userId, perfumeId])
  @@index([userId])
  @@index([perfumeId])
  @@index([createdAt])       // homepage latest-reviews orderBy
  @@index([weather_tags])    // hasSome climate-picks filter (converted to GIN by Postgres)
  @@map("reviews")
}

model ReviewUpvote {
  id       String @id @default(cuid())
  userId   String
  reviewId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([userId, reviewId])
  @@map("review_upvotes")
}

// =============================================
//  Shop (Verified Boutique)
// =============================================

model Shop {
  id                 String   @id @default(cuid())
  name               String
  website            String?
  address            String?
  latitude           Float?
  longitude          Float?
  isVerified         Boolean  @default(false)
  description        String?  @db.Text
  imageUrl           String?
  createdAt          DateTime @default(now())

  deals Deal[]

  @@index([isVerified])
  @@map("shops")
}

// =============================================
//  Deal (Live Price Tracker)
// =============================================

model Deal {
  id                 String   @id @default(cuid())
  perfumeId          String
  sellerId           String
  shopId             String?  // optional link to a verified boutique
  price              Int      // price in BDT (Taka)
  url                String?  // direct buy link
  discountPercentage Int?     // optional discount %
  link               String?
  is_active          Boolean  @default(true)
  is_featured        Boolean  @default(false)
  last_updated       DateTime @default(now()) @updatedAt

  perfume Perfume @relation(fields: [perfumeId], references: [id], onDelete: Cascade)
  seller  User    @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  shop    Shop?   @relation(fields: [shopId], references: [id], onDelete: SetNull)

  @@index([perfumeId, is_active])
  @@index([shopId])
  @@map("deals")
}

// =============================================
//  DupeVote (Dupe / Clone Finder)
// =============================================

model DupeVote {
  id                 String   @id @default(cuid())
  originalPerfumeId  String
  clonePerfumeId     String
  upvotes            Int      @default(0)
  downvotes          Int      @default(0)
  submittedBy        String
  createdAt          DateTime @default(now())

  // match_score is computed: upvotes / (upvotes + downvotes) * 100
  original  Perfume @relation("OriginalPerfume", fields: [originalPerfumeId], references: [id], onDelete: Cascade)
  clone     Perfume @relation("ClonePerfume",    fields: [clonePerfumeId],    references: [id], onDelete: Cascade)
  submitter User    @relation(fields: [submittedBy], references: [id], onDelete: Cascade)

  @@unique([originalPerfumeId, clonePerfumeId])
  @@index([originalPerfumeId])
  @@map("dupe_votes")
}

// =============================================
//  Personal Wardrobe
// =============================================

// shelf values: "HAVE" | "HAD" | "WANT" | "SIGNATURE"
model WardrobeItem {
  id        String   @id @default(cuid())
  shelf     String   // HAVE | HAD | WANT | SIGNATURE
  userId    String
  perfumeId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  perfume Perfume @relation(fields: [perfumeId], references: [id], onDelete: Cascade)

  @@unique([userId, perfumeId])
  @@index([userId])
  @@map("wardrobe_items")
}

// =============================================
//  Fragram (SOTD Feed)
// =============================================

model FragramPost {
  id        String   @id @default(cuid())
  userId    String
  perfumeId String?
  imageUrl  String
  caption   String?
  likeCount Int      @default(0)
  createdAt DateTime @default(now())

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  perfume Perfume?      @relation(fields: [perfumeId], references: [id], onDelete: SetNull)
  likes   FragramLike[]

  @@index([createdAt(sort: Desc)])
  @@map("fragram_posts")
}

model FragramLike {
  id     String @id @default(cuid())
  userId String
  postId String

  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  post FragramPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([postId])
  @@map("fragram_likes")
}

// =============================================
//  Notification
// =============================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "REVIEW_UPVOTE" | "DUPE_VOTE" | "FRAGRAM_LIKE" | "REVIEW_REPLY"
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}

// =============================================
//  Perfume of the Day
// =============================================

model PerfumeOfTheDay {
  id        String   @id @default(cuid())
  perfumeId String
  date      DateTime @unique @db.Date // one entry per calendar day
  note      String?  // editorial note from admin
  createdAt DateTime @default(now())

  perfume Perfume @relation(fields: [perfumeId], references: [id], onDelete: Cascade)

  @@map("perfume_of_the_day")
}

// =============================================
//  Decant Listing (P2P WhatsApp Marketplace)
// =============================================

model DecantListing {
  id              String   @id @default(cuid())
  price_5ml       Int?                          // price in BDT, nullable if not offered
  price_10ml      Int?                          // price in BDT, nullable if not offered
  batch_code      String                        // e.g. "B24Q3" for authenticity tracing
  proof_image_url String                        // uploaded photo proving authenticity
  status          String   @default("AVAILABLE") // AVAILABLE | SOLD | PAUSED

  perfumeId String
  perfume   Perfume @relation(fields: [perfumeId], references: [id], onDelete: Cascade)

  sellerId String
  seller   User   @relation("UserDecants", fields: [sellerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([perfumeId, status])
  @@index([sellerId])
  @@map("decant_listings")
}

// =============================================
//  Creator (Master Perfumer)
// =============================================

model Creator {
  id       String    @id @default(cuid())
  name     String    @unique
  bio      String?   @db.Text
  image    String?   // optional avatar / portrait URL
  website  String?   // optional personal site
  perfumes Perfume[]

  createdAt DateTime @default(now())

  @@index([name])
  @@map("creators")
}

// =============================================
//  Feature Toggle (Kill Switch)
// =============================================

model FeatureToggle {
  id        String   @id @default(cuid())
  key       String   @unique
  isEnabled Boolean  @default(true)
  updatedAt DateTime @updatedAt

  @@map("feature_toggles")
}

// =============================================
//  Audit Log (Enterprise Security)
// =============================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   // Store as string to avoid strict cascading issues, but links to User
  action    String
  details   String?  @db.Text
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}

// =============================================
//  B2B Monetization (Claims)
// =============================================

model BrandClaim {
  id            String   @id @default(cuid())
  userId        String
  brandName     String
  officialEmail String
  status        String   @default("PENDING") // PENDING | APPROVED | REJECTED
  message       String?  @db.Text
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("brand_claims")
}
