# =============================================
#  Subash — Environment Variables
#  Copy this file to .env.local and fill in values
#  NEVER commit .env.local to version control
# =============================================

# --- Database ---
# Local dev  → host is localhost:5432
# Docker Compose → host is db:5432 (the service name in docker-compose.yml)
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/subash_db?schema=public"

# --- Docker Postgres Init (used by docker-compose.yml only) ---
# These seed the Postgres container on first start.
# Keep in sync with the credentials in DATABASE_URL above.
POSTGRES_USER="subash_user"
POSTGRES_PASSWORD="change_me_strong_password"
POSTGRES_DB="subash_db"

# --- Auth.js v5 (next-auth v5) ---
# Generate with:  npx auth secret   OR   openssl rand -base64 32
AUTH_SECRET="generate-with: npx auth secret"
# Local dev:
AUTH_URL="http://localhost:3000"
# Production (swap when deploying):
# AUTH_URL="https://subash.com.bd"

# --- Google OAuth ---
# Console: https://console.developers.google.com
# Authorised redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --- Facebook OAuth ---
# Console: https://developers.facebook.com/apps
# Valid OAuth redirect URI: http://localhost:3000/api/auth/callback/facebook
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# --- Firebase (Phone OTP — Phase 2.2) ---
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=""

# --- OpenWeatherMap ---
OPENWEATHERMAP_API_KEY=""
NEXT_PUBLIC_DEFAULT_CITY="Dhaka"

# --- Site URL ---
NEXT_PUBLIC_SITE_URL="https://subash.com.bd"

# --- CasaOS / Docker seeding ---
# Set to "true" on FIRST boot to import all ~70k perfumes from the bundled CSV.
# After the import finishes, set to "false" (or remove) so restarts skip it.
SEED_DB="false"
